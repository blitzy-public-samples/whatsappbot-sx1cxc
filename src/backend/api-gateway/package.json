{
  "name": "@whatsapp-web/api-gateway",
  "version": "1.0.0",
  "description": "Secure and monitored API Gateway service for WhatsApp Web Enhancement Application",
  "author": "WhatsApp Web Enhancement Team",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc --project tsconfig.json",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest --detectOpenHandles",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov",
    "security-audit": "npm audit --audit-level=high"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.4.1",
    "axios": "1.6.x",
    "bcryptjs": "2.4.x",
    "compression": "1.7.x",
    "cors": "2.8.x",
    "dotenv": "^16.3.0",
    "express": "4.18.x",
    "express-rate-limit": "^6.9.0",
    "helmet": "7.0.x",
    "i18next": "^23.5.0",
    "ioredis": "^5.3.0",
    "joi": "17.10.x",
    "jsonwebtoken": "9.0.x",
    "morgan": "1.10.x",
    "opossum": "6.x.x",
    "prom-client": "14.2.x",
    "rate-limiter-flexible": "3.0.x",
    "rate-limit-redis": "4.0.x",
    "sanitize-html": "2.11.x",
    "winston": "3.10.x",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/jest": "29.5.x",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.8.0",
    "@types/supertest": "^2.0.13",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "8.49.x",
    "jest": "29.7.x",
    "supertest": "6.3.x",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.0.x"
  }
}