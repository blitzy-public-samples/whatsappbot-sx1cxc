# API Configuration
# Version: v1.0.0
REACT_APP_API_BASE_URL=https://api.whatsapp-enhancement.com/api/v1
REACT_APP_API_TIMEOUT=30000

# WebSocket Configuration
# Version: v1.0.0
REACT_APP_WS_URL=wss://api.whatsapp-enhancement.com/ws
REACT_APP_WS_RECONNECT_INTERVAL=5000
REACT_APP_WS_MAX_RETRIES=5

# File Upload Restrictions
# Maximum file size: 16MB (16 * 1024 * 1024 bytes)
REACT_APP_MAX_FILE_SIZE=16777216
# WhatsApp-approved file types for secure uploads
REACT_APP_SUPPORTED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Analytics Configuration
# Refresh interval: 5 minutes (5 * 60 * 1000 milliseconds)
REACT_APP_ANALYTICS_REFRESH_INTERVAL=300000

# Environment and Version Configuration
NODE_ENV=production
REACT_APP_VERSION=${process.env.npm_package_version}