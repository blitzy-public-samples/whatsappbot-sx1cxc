{
  "compilerOptions": {
    // ECMAScript Target and Features
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],

    // Module Resolution
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // JavaScript Support
    "allowJs": false,
    "skipLibCheck": true,

    // Type Checking
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    // React Configuration
    "jsx": "react-jsx",

    // Path Resolution
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@services/*": ["src/services/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@assets/*": ["src/assets/*"],
      "@config/*": ["src/config/*"]
    },

    // Type Definitions
    "types": ["vite/client"]
  },

  // Project Files
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],

  // Excluded Files/Folders
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ],

  // Project References
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}